<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/no"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.dhruvik.smarttt.JoinGroup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#66816a68">

        <Button
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#84f41212"
            android:fontFamily="@font/amita"
            android:padding="15dp"
            android:text="join class"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#84f41212"
            android:fontFamily="@font/amita"
            android:text="create class"

            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* If class already exists then click 'join class'.
If you want to create a new class then 'create class'."
            android:textColor="#ffff"
            />

    </LinearLayout>

</LinearLayout>
